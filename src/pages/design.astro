---
import Layout from '../layouts/Layout.astro'
import ProjectGrid from '../components/ProjectGrid/ProjectGrid.astro'
import TextBanner from '../components/Text/TextBanner.astro'
import { projectsData } from '../data/projects'

const { projects } = projectsData
---

<Layout
  pageTitle='Design Projects'
  pageDescription='A collection of design projects showcasing my work in various disciplines.'>
  <TextBanner
    pageTitle='Design Work'
    pageDescription='A collection of design projects showcasing my work in various disciplines.'
  />
  <ProjectGrid projects={projects} />
</Layout>
