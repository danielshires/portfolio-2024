---
import PostCard from '../../components/Cards/PostCard.jsx'
import Layout from '../../layouts/Layout.astro'
import ButtonPrimary from '../../components/Buttons/ButtonPrimary.astro'
import Image from 'astro/components/Image.astro'
import PageTransition from '../../components/Transitions/PageTransition.astro'
---

<Layout
  pageTitle='Scenic'
  pageDescription='Scenic travel platform - connecting adventurers with unique destinations and unforgettable experiences worldwide.'>
  <PageTransition>
    <main class='min-h-screen'>
      <section id='scenic' class='w-full'>
        <a href='/design' class='block w-full' transition:name='scenic-image'>
          <Image
            id='projectImage'
            src='https://letsenhance.io/static/8f5e523ee6b2479e26ecc91b9c25261e/1015f/MainAfter.jpg'
            alt='Scenic project overview'
            width='2400'
            height='900'
            decoding='async'
            loading='lazy'
            class='w-full aspect-[1/1] md:aspect-[12/5] object-cover'
            transition:name='scenic-image-content'
          />
        </a>
        <div class='container-default mt-32'>
          <div id='projectContent' class='grid-default' transition:name='scenic-content'>
            <div
              id='text'
              class='col-span-1 md:col-span-3 lg:col-span-6 flex flex-col gap-4'
              transition:name='scenic-text'>
              <h3 class='text-sm' transition:name='scenic-title'>Scenic</h3>
              <h2 class='text-4xl' transition:name='scenic-heading'>
                Crafting immersive travel experiences through design
              </h2>
              <p class='text-lg' transition:name='scenic-description'>
                Scenic is a premium travel platform showcasing luxury cruises and tours. As UX/UI Designer, I created an elegant digital experience that captures the wonder of travel and simplifies the booking journey.
              </p>
            </div>
            <div
              id='outcomes'
              class='col-span-1 md:col-span-3 lg:col-span-6 flex flex-row gap-12 justify-start lg:justify-end'
              transition:name='scenic-outcomes'>
              <div transition:name='scenic-stat-1'>
                <p class='text-4xl font-medium'>3.2m</p>
                <p class='text-sm opacity-75'>annual visitors</p>
              </div>
              <div transition:name='scenic-stat-2'>
                <p class='text-4xl font-medium'>+42%</p>
                <p class='text-sm opacity-75'>booking conversion</p>
              </div>
              <div transition:name='scenic-stat-3'>
                <p class='text-4xl font-medium'>95%</p>
                <p class='text-sm opacity-75'>customer satisfaction</p>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
  </PageTransition>
</Layout>

<style>
  /* Add smooth transitions for all elements */
  ::view-transition-old(scenic-image),
  ::view-transition-new(scenic-image) {
    animation: none;
    mix-blend-mode: normal;
  }

  ::view-transition-old(scenic-image-content),
  ::view-transition-new(scenic-image-content) {
    animation: none;
    mix-blend-mode: normal;
  }

  /* Add fade animation for content */
  ::view-transition-old(scenic-content),
  ::view-transition-new(scenic-content) {
    animation: fade 0.5s ease-in-out;
  }

  @keyframes fade {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>