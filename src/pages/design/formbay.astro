---
import PostCard from '../../components/Cards/PostCard.jsx'
import Layout from '../../layouts/Layout.astro'
import ButtonPrimary from '../../components/Buttons/ButtonPrimary.astro'
import Image from 'astro/components/Image.astro'
import PageTransition from '../../components/Transitions/PageTransition.astro'
import Text from '../../components/Text/Text.astro'
import Statistic from '../../components/FeaturedProject/Statistic.astro'
---

<Layout
  pageTitle='Formbay'
  pageDescription='Formbay no-code form builder - simplifying form creation for modern businesses.'>
  <PageTransition>
    <main class='min-h-screen'>
      <section id='formbay' class='w-full'>
        <a href='/design' class='block w-full' transition:name='formbay-image'>
          <Image
            id='projectImage'
            src='https://letsenhance.io/static/8f5e523ee6b2479e26ecc91b9c25261e/1015f/MainAfter.jpg'
            alt='Formbay project overview'
            width='2400'
            height='900'
            decoding='async'
            loading='lazy'
            class='w-full aspect-[1/1] md:aspect-[12/5] object-cover'
            transition:name='formbay-image-content'
          />
        </a>

        <div class='container-default mt-32'>
          <div id='projectContent' class='grid-default' transition:name='formbay-content'>
            <div
              id='text'
              class='col-span-1 md:col-span-3 lg:col-span-6 flex flex-col gap-4'
              transition:name='formbay-text'>
              <Text variant='overline' transition:name='formbay-title'>Formbay</Text>
              <Text variant='h1' transition:name='formbay-heading'>
                Simplifying form creation for modern businesses
              </Text>
              <Text variant='body' size='lg' transition:name='formbay-description'>
                Formbay is a no-code form builder that enables businesses to create sophisticated
                forms and surveys. As Product Designer, I led the UX strategy and interface design
                to make form creation intuitive and powerful.
              </Text>
            </div>
            <div
              id='outcomes'
              class='col-span-1 md:col-span-3 lg:col-span-6 flex flex-row gap-12 justify-start lg:justify-end'
              transition:name='formbay-outcomes'>
              <Statistic value='150k' label='forms created' index={1} />
              <Statistic value='+85%' label='user retention' index={2} />
              <Statistic value='12s' label='avg. form creation' index={3} />
            </div>
          </div>
        </div>
      </section>
    </main>
  </PageTransition>
</Layout>

<style>
  /* Add smooth transitions for all elements */
  ::view-transition-old(formbay-image),
  ::view-transition-new(formbay-image) {
    animation: none;
    mix-blend-mode: normal;
  }

  ::view-transition-old(formbay-image-content),
  ::view-transition-new(formbay-image-content) {
    animation: none;
    mix-blend-mode: normal;
  }

  /* Add fade animation for content */
  ::view-transition-old(formbay-content),
  ::view-transition-new(formbay-content) {
    animation: fade 0.5s ease-in-out;
  }

  @keyframes fade {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
