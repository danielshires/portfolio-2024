---
import PostCard from '../../components/Cards/PostCard.jsx'
import Layout from '../../layouts/Layout.astro'
import ButtonPrimary from '../../components/Buttons/ButtonPrimary.astro'
import Image from 'astro/components/Image.astro'
import PageTransition from '../../components/Transitions/PageTransition.astro'
---

<Layout
  pageTitle='Formbay'
  pageDescription='Formbay form builder platform - empowering businesses to create beautiful, functional forms without code.'>
  <PageTransition>
    <main class='min-h-screen'>
      <section id='formbay' class='w-full'>
        <a href='/design' class='block w-full' transition:name='formbay-image'>
          <Image
            id='projectImage'
            src='https://letsenhance.io/static/8f5e523ee6b2479e26ecc91b9c25261e/1015f/MainAfter.jpg'
            alt='Formbay project overview'
            width='2400'
            height='900'
            decoding='async'
            loading='lazy'
            class='w-full aspect-[1/1] md:aspect-[12/5] object-cover'
            transition:name='formbay-image-content'
          />
        </a>
        <div class='container-default mt-32'>
          <div id='projectContent' class='grid-default' transition:name='formbay-content'>
            <div
              id='text'
              class='col-span-1 md:col-span-3 lg:col-span-6 flex flex-col gap-4'
              transition:name='formbay-text'>
              <h3 class='text-sm' transition:name='formbay-title'>Formbay</h3>
              <h2 class='text-4xl' transition:name='formbay-heading'>
                Simplifying form creation for modern businesses
              </h2>
              <p class='text-lg' transition:name='formbay-description'>
                Formbay is a no-code form builder that enables businesses to create sophisticated forms and surveys. As Product Designer, I led the UX strategy and interface design to make form creation intuitive and powerful.
              </p>
            </div>
            <div
              id='outcomes'
              class='col-span-1 md:col-span-3 lg:col-span-6 flex flex-row gap-12 justify-start lg:justify-end'
              transition:name='formbay-outcomes'>
              <div transition:name='formbay-stat-1'>
                <p class='text-4xl font-medium'>150k</p>
                <p class='text-sm opacity-75'>forms created</p>
              </div>
              <div transition:name='formbay-stat-2'>
                <p class='text-4xl font-medium'>+85%</p>
                <p class='text-sm opacity-75'>user retention</p>
              </div>
              <div transition:name='formbay-stat-3'>
                <p class='text-4xl font-medium'>12s</p>
                <p class='text-sm opacity-75'>avg. form creation</p>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
  </PageTransition>
</Layout>

<style>
  /* Add smooth transitions for all elements */
  ::view-transition-old(formbay-image),
  ::view-transition-new(formbay-image) {
    animation: none;
    mix-blend-mode: normal;
  }

  ::view-transition-old(formbay-image-content),
  ::view-transition-new(formbay-image-content) {
    animation: none;
    mix-blend-mode: normal;
  }

  /* Add fade animation for content */
  ::view-transition-old(formbay-content),
  ::view-transition-new(formbay-content) {
    animation: fade 0.5s ease-in-out;
  }

  @keyframes fade {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>