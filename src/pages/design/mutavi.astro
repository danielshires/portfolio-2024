---
import PostCard from '../../components/Cards/PostCard.jsx'
import Layout from '../../layouts/Layout.astro'
import ButtonPrimary from '../../components/Buttons/ButtonPrimary.astro'
import Image from 'astro/components/Image.astro'
import PageTransition from '../../components/Transitions/PageTransition.astro'
---

<Layout
  pageTitle='Mutavi'
  pageDescription='Mutavi video editing platform - democratizing professional video creation with intuitive tools and powerful features.'>
  <PageTransition>
    <main class='min-h-screen'>
      <section id='mutavi' class='w-full'>
        <a href='/design' class='block w-full' transition:name='mutavi-image'>
          <Image
            id='projectImage'
            src='https://letsenhance.io/static/8f5e523ee6b2479e26ecc91b9c25261e/1015f/MainAfter.jpg'
            alt='Mutavi project overview'
            width='2400'
            height='900'
            decoding='async'
            loading='lazy'
            class='w-full aspect-[1/1] md:aspect-[12/5] object-cover'
            transition:name='mutavi-image-content'
          />
        </a>
        <div class='container-default mt-32'>
          <div id='projectContent' class='grid-default' transition:name='mutavi-content'>
            <div
              id='text'
              class='col-span-1 md:col-span-3 lg:col-span-6 flex flex-col gap-4'
              transition:name='mutavi-text'>
              <h3 class='text-sm' transition:name='mutavi-title'>Mutavi</h3>
              <h2 class='text-4xl' transition:name='mutavi-heading'>
                Democratizing video editing through thoughtful design
              </h2>
              <p class='text-lg' transition:name='mutavi-description'>
                Mutavi is a comprehensive video editing suite that makes professional-grade editing accessible to everyone. As Lead UX Designer, I simplified complex workflows while maintaining powerful functionality for content creators of all skill levels.
              </p>
            </div>
            <div
              id='outcomes'
              class='col-span-1 md:col-span-3 lg:col-span-6 flex flex-row gap-12 justify-start lg:justify-end'
              transition:name='mutavi-outcomes'>
              <div transition:name='mutavi-stat-1'>
                <p class='text-4xl font-medium'>1.8m</p>
                <p class='text-sm opacity-75'>monthly users</p>
              </div>
              <div transition:name='mutavi-stat-2'>
                <p class='text-4xl font-medium'>+73%</p>
                <p class='text-sm opacity-75'>task efficiency</p>
              </div>
              <div transition:name='mutavi-stat-3'>
                <p class='text-4xl font-medium'>4.6</p>
                <p class='text-sm opacity-75'>user satisfaction</p>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
  </PageTransition>
</Layout>

<style>
  /* Add smooth transitions for all elements */
  ::view-transition-old(mutavi-image),
  ::view-transition-new(mutavi-image) {
    animation: none;
    mix-blend-mode: normal;
  }

  ::view-transition-old(mutavi-image-content),
  ::view-transition-new(mutavi-image-content) {
    animation: none;
    mix-blend-mode: normal;
  }

  /* Add fade animation for content */
  ::view-transition-old(mutavi-content),
  ::view-transition-new(mutavi-content) {
    animation: fade 0.5s ease-in-out;
  }

  @keyframes fade {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>