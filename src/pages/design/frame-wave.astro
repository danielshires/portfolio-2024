---
import PostCard from '../../components/ui/cards/PostCard.jsx'
import Layout from '../../layouts/Layout.astro'
import ButtonPrimary from '../../components/ui/buttons/ButtonPrimary.astro'
import Image from 'astro/components/Image.astro'
import PageTransition from '../../components/layout/transitions/PageTransition.astro'
---

<Layout
  pageTitle='Frame Wave'
  pageDescription='Frame Wave video platform - enabling creators to share, collaborate, and monetize visual storytelling with cutting-edge tools.'>
  <PageTransition>
    <main class='min-h-screen'>
      <section id='frameWave' class='w-full'>
        <a href='/design' class='block w-full' transition:name='frame-wave-image'>
          <Image
            id='projectImage'
            src='https://letsenhance.io/static/8f5e523ee6b2479e26ecc91b9c25261e/1015f/MainAfter.jpg'
            alt='Frame Wave project overview'
            width='2400'
            height='900'
            decoding='async'
            loading='lazy'
            class='w-full aspect-[1/1] md:aspect-[12/5] object-cover'
            transition:name='frame-wave-image-content'
          />
        </a>
        <div class='container-default mt-32'>
          <div id='projectContent' class='grid-default' transition:name='frame-wave-content'>
            <div
              id='text'
              class='col-span-1 md:col-span-3 lg:col-span-6 flex flex-col gap-4'
              transition:name='frame-wave-text'>
              <h3 class='text-sm' transition:name='frame-wave-title'>Frame Wave</h3>
              <h2 class='text-4xl' transition:name='frame-wave-heading'>
                Empowering visual storytellers through innovative design
              </h2>
              <p class='text-lg' transition:name='frame-wave-description'>
                Frame Wave is a next-generation video platform for creators and filmmakers. As
                Senior UX Designer, I designed collaborative tools and intuitive workflows that
                enable creators to produce, share, and monetize their visual stories.
              </p>
            </div>
            <div
              id='outcomes'
              class='col-span-1 md:col-span-3 lg:col-span-6 flex flex-row gap-12 justify-start lg:justify-end'
              transition:name='frame-wave-outcomes'>
              <div transition:name='frame-wave-stat-1'>
                <p class='text-4xl font-medium'>250k</p>
                <p class='text-sm opacity-75'>creators onboard</p>
              </div>
              <div transition:name='frame-wave-stat-2'>
                <p class='text-4xl font-medium'>+156%</p>
                <p class='text-sm opacity-75'>upload frequency</p>
              </div>
              <div transition:name='frame-wave-stat-3'>
                <p class='text-4xl font-medium'>3.2m</p>
                <p class='text-sm opacity-75'>hours watched</p>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
  </PageTransition>
</Layout>

<style>
  /* Add smooth transitions for all elements */
  ::view-transition-old(frame-wave-image),
  ::view-transition-new(frame-wave-image) {
    animation: none;
    mix-blend-mode: normal;
  }

  ::view-transition-old(frame-wave-image-content),
  ::view-transition-new(frame-wave-image-content) {
    animation: none;
    mix-blend-mode: normal;
  }

  /* Add fade animation for content */
  ::view-transition-old(frame-wave-content),
  ::view-transition-new(frame-wave-content) {
    animation: fade 0.5s ease-in-out;
  }

  @keyframes fade {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
