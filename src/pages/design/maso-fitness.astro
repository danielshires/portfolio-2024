---
import PostCard from '../../components/Cards/PostCard.jsx'
import Layout from '../../layouts/Layout.astro'
import ButtonPrimary from '../../components/Buttons/ButtonPrimary.astro'
import Image from 'astro/components/Image.astro'
import PageTransition from '../../components/Transitions/PageTransition.astro'
---

<Layout
  pageTitle='Maso Fitness'
  pageDescription='Maso Fitness app - revolutionizing personal training with AI-powered workouts and community-driven motivation.'>
  <PageTransition>
    <main class='min-h-screen'>
      <section id='masoFitness' class='w-full'>
        <a href='/design' class='block w-full' transition:name='maso-fitness-image'>
          <Image
            id='projectImage'
            src='https://letsenhance.io/static/8f5e523ee6b2479e26ecc91b9c25261e/1015f/MainAfter.jpg'
            alt='Maso Fitness project overview'
            width='2400'
            height='900'
            decoding='async'
            loading='lazy'
            class='w-full aspect-[1/1] md:aspect-[12/5] object-cover'
            transition:name='maso-fitness-image-content'
          />
        </a>
        <div class='container-default mt-32'>
          <div id='projectContent' class='grid-default' transition:name='maso-fitness-content'>
            <div
              id='text'
              class='col-span-1 md:col-span-3 lg:col-span-6 flex flex-col gap-4'
              transition:name='maso-fitness-text'>
              <h3 class='text-sm' transition:name='maso-fitness-title'>Maso Fitness</h3>
              <h2 class='text-4xl' transition:name='maso-fitness-heading'>
                Reimagining fitness through intelligent app design
              </h2>
              <p class='text-lg' transition:name='maso-fitness-description'>
                Maso Fitness is an AI-powered fitness app that personalizes workouts and nutrition plans. As Lead Product Designer, I designed an engaging experience that motivates users to achieve their fitness goals through smart technology.
              </p>
            </div>
            <div
              id='outcomes'
              class='col-span-1 md:col-span-3 lg:col-span-6 flex flex-row gap-12 justify-start lg:justify-end'
              transition:name='maso-fitness-outcomes'>
              <div transition:name='maso-fitness-stat-1'>
                <p class='text-4xl font-medium'>500k</p>
                <p class='text-sm opacity-75'>active users</p>
              </div>
              <div transition:name='maso-fitness-stat-2'>
                <p class='text-4xl font-medium'>+67%</p>
                <p class='text-sm opacity-75'>workout completion</p>
              </div>
              <div transition:name='maso-fitness-stat-3'>
                <p class='text-4xl font-medium'>4.7</p>
                <p class='text-sm opacity-75'>app store rating</p>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
  </PageTransition>
</Layout>

<style>
  /* Add smooth transitions for all elements */
  ::view-transition-old(maso-fitness-image),
  ::view-transition-new(maso-fitness-image) {
    animation: none;
    mix-blend-mode: normal;
  }

  ::view-transition-old(maso-fitness-image-content),
  ::view-transition-new(maso-fitness-image-content) {
    animation: none;
    mix-blend-mode: normal;
  }

  /* Add fade animation for content */
  ::view-transition-old(maso-fitness-content),
  ::view-transition-new(maso-fitness-content) {
    animation: fade 0.5s ease-in-out;
  }

  @keyframes fade {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>