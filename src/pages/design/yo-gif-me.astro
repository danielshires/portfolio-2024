---
import PostCard from '../../components/ui/cards/PostCard.jsx'
import Layout from '../../layouts/Layout.astro'
import ButtonPrimary from '../../components/ui/buttons/ButtonPrimary.astro'
import Image from 'astro/components/Image.astro'
import PageTransition from '../../components/layout/transitions/PageTransition.astro'
---

<Layout
  pageTitle='Yo Gif Me'
  pageDescription='Yo Gif Me - the ultimate GIF creation and sharing platform designed for instant communication and viral content creation.'>
  <PageTransition>
    <main class='min-h-screen'>
      <section id='yoGifMe' class='w-full'>
        <a href='/design' class='block w-full' transition:name='yo-gif-me-image'>
          <Image
            id='projectImage'
            src='https://letsenhance.io/static/8f5e523ee6b2479e26ecc91b9c25261e/1015f/MainAfter.jpg'
            alt='Yo Gif Me project overview'
            width='2400'
            height='900'
            decoding='async'
            loading='lazy'
            class='w-full aspect-[1/1] md:aspect-[12/5] object-cover'
            transition:name='yo-gif-me-image-content'
          />
        </a>
        <div class='container-default mt-32'>
          <div id='projectContent' class='grid-default' transition:name='yo-gif-me-content'>
            <div
              id='text'
              class='col-span-1 md:col-span-3 lg:col-span-6 flex flex-col gap-4'
              transition:name='yo-gif-me-text'>
              <h3 class='text-sm' transition:name='yo-gif-me-title'>Yo Gif Me</h3>
              <h2 class='text-4xl' transition:name='yo-gif-me-heading'>
                Making GIF creation fun, fast, and viral-ready
              </h2>
              <p class='text-lg' transition:name='yo-gif-me-description'>
                Yo Gif Me is a playful GIF creation platform that makes it easy to turn moments into
                shareable content. As Product Designer, I focused on creating an intuitive, fun
                experience that encourages creativity and social sharing.
              </p>
            </div>
            <div
              id='outcomes'
              class='col-span-1 md:col-span-3 lg:col-span-6 flex flex-row gap-12 justify-start lg:justify-end'
              transition:name='yo-gif-me-outcomes'>
              <div transition:name='yo-gif-me-stat-1'>
                <p class='text-4xl font-medium'>2.1m</p>
                <p class='text-sm opacity-75'>GIFs created</p>
              </div>
              <div transition:name='yo-gif-me-stat-2'>
                <p class='text-4xl font-medium'>+89%</p>
                <p class='text-sm opacity-75'>social shares</p>
              </div>
              <div transition:name='yo-gif-me-stat-3'>
                <p class='text-4xl font-medium'>8s</p>
                <p class='text-sm opacity-75'>avg. creation time</p>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
  </PageTransition>
</Layout>

<style>
  /* Add smooth transitions for all elements */
  ::view-transition-old(yo-gif-me-image),
  ::view-transition-new(yo-gif-me-image) {
    animation: none;
    mix-blend-mode: normal;
  }

  ::view-transition-old(yo-gif-me-image-content),
  ::view-transition-new(yo-gif-me-image-content) {
    animation: none;
    mix-blend-mode: normal;
  }

  /* Add fade animation for content */
  ::view-transition-old(yo-gif-me-content),
  ::view-transition-new(yo-gif-me-content) {
    animation: fade 0.5s ease-in-out;
  }

  @keyframes fade {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
