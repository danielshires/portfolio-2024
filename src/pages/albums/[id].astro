---
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const albums = await getCollection("albums");

  const paths = Object.values(albums).map((album) => {
    return {
      params: {
        id: (album as any).id,
      },
      props: {
        album,
      },
    };
  });

  return paths;
}

const { album } = Astro.props;
