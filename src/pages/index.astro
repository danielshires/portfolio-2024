---
import PostCard from '../components/Cards/PostCard.astro';
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
const posts = await getCollection('posts');
const albums = await getCollection('albums');
import TextLink from '../components/Buttons/TextLink.astro';
---

<Layout pageTitle='Daniel Shires | Product Designer based in Sydney currently working for Commonwealth Bank' pageDescription='UX/UI Designer and Front-End Developer based in Sydney Australia. I use the principles of human centred design to create simple, impactful experiences in pixels and code.'>
	<div class='h-100 overflow-hidden'>
		<div
			class='flex flex-col h-5/6 justify-center align-middle gap-6 lg:gap-12 w-full md:w-10/12 lg:w-9/12 mt-48'
		>
			<h2 class='text-xl md:text-4xl md:leading-snug lg:text-5xl g:leading-snug'>
				Hi, I'm Dan. I'm a Product Designer.
			</h2>
			<h2 class='text-xl md:text-4xl md:leading-snug lg:text-5xl lg:leading-snug'>
				I love designing systematic, engaging, and user-centric applications
				with the ultimate goal of delivering more value to business & customers.
			</h2>
			<h2 class='text-xl md:text-4xl md:leading-snug lg:text-5xl lg:leading-snug'>
				I'm currently working at <TextLink href='https://www.commbank.com.au' target="_blank" path="https://www.commbank.com.au">Commonwealth Bank</TextLink>
			</h2>
		</div>
	</div>
	<!-- <div>
		{posts.slice(0, 3).map((p) => <PostCard post={p} />)}
	</div> -->
</Layout>
