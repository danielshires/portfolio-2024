---
import PostCard from '../components/Cards/PostCard.astro';
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
const posts = await getCollection('posts');
const albums = await getCollection('albums');
import TextLink from '../components/Buttons/NavLink.astro';
import { fade } from 'astro:transitions';
import ButtonTertiary from '../components/Buttons/ButtonTertiary.astro'

const anim = {
	old: {
		name: 'fadeIn',
		duration: '1s',
		easing: 'linear',
		fillMode: 'forwards',
	},
	new: {
		name: 'fadeOut',
		duration: '2s',
		easing: 'linear',
		fillMode: 'backwards',
	},
};

const myFade = {
	forwards: anim,
	backwards: anim,
};

import { Icon } from 'astro-icon/components';
---

<Layout
	pageTitle='Daniel Shires | Product Designer based in Sydney currently working for Commonwealth Bank'
	pageDescription='UX/UI Designer and Front-End Developer based in Sydney Australia. I use the principles of human centred design to create simple, impactful experiences in pixels and code.'
>
	<div id="introduction" class='h-100 overflow-hidden' transition:animate={myFade}>
		<div
			class='flex flex-col h-5/6 justify-center align-middle gap-6 lg:gap-12 w-full md:w-10/12 lg:w-9/12 mt-48'
		>
			<h2
				class='text-xl md:text-4xl md:leading-snug lg:text-5xl g:leading-snug'
				transition:animate={fade({ duration: '0.2s' })}
			>
				Hi, I'm Dan. I'm a Product Designer.
			</h2>
			<h2
				class='text-xl md:text-4xl md:leading-snug lg:text-5xl lg:leading-snug'
				transition:animate={fade({ duration: '0.4s' })}
			>
				I love designing systematic, engaging, and user-centric applications
				with the ultimate goal of delivering more value to business & customers.
			</h2>
			<h2
				class='text-xl md:text-4xl md:leading-snug lg:text-5xl lg:leading-snug'
				transition:animate={fade({ duration: '0.6s' })}
			>
				I'm currently working at <ButtonTertiary
				href='https://www.commbank.com.au'
				target='_blank'
				path='/'
			>
				Commonwealth Bank

			</ButtonTertiary>
			</h2>
			
		</div>
		<!-- <div
			id='recent-posts'
			class='mt-16 flex flex-col gap-4'
			transition:animate={fade({ duration: '0.8s' })}
		>
			<h4 class=''>Recent Posts</h4>
			<div>
				{posts.slice(0, 3).map((p) => <PostCard post={p} />)}
			</div>
		</div> -->
	</div>
</Layout>
