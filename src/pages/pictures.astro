---
import Layout from '../layouts/Layout.astro'
import SimpleHero from '../components/Hero/SimpleHero.astro'
import Image from 'astro/components/Image.astro'
import AlbumCard from '../components/Cards/AlbumCard.astro'
import { getAllAlbums } from '../lib/sanity'
import PageTransition from '../components/Transitions/PageTransition.astro'
import type { Album } from '../lib/sanity'

let albums: Album[] = []
let error = null

try {
  albums = await getAllAlbums()
} catch (e) {
  error = e
}

const heroContent = {
  introText: {
    first: 'Pictures',
    second: 'Capturing moments and memories through the lens.',
  },
}
---

<Layout pageTitle='Pictures' pageDescription={heroContent.introText.first}>
  <PageTransition>
    <div class='flex flex-col'>
      <SimpleHero {...heroContent} />

      <div class='py-8'>
        {
          error ? (
            <div
              class='bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative'
              role='alert'>
              <strong class='font-bold'>Error!</strong>
              <span class='block sm:inline'> Failed to load albums. Please try again later.</span>
            </div>
          ) : albums.length === 0 ? (
            <div class='text-center py-12'>
              <h2 class='text-2xl font-semibold text-gray-700'>No albums found</h2>
              <p class='mt-2 text-gray-600'>Check back soon for new photography collections.</p>
            </div>
          ) : (
            <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6'>
              {albums.map((album) => (
                <AlbumCard album={album} />
              ))}
            </div>
          )
        }
      </div>
    </div>
  </PageTransition>
</Layout>
