---
import Layout from '../layouts/Layout.astro'
import { getAllPictures } from '../lib/sanity'
import PictureCard from '../components/Cards/PictureCard.astro'
import SimpleHero from '../components/Hero/SimpleHero.astro'
import PageTransition from '../components/Transitions/PageTransition.astro'

const pictures = await getAllPictures()

const heroContent = {
  introText: {
    first: 'Pictures',
    second: 'A collection of photographs capturing moments, places, and perspectives that inspire.',
  },
}
---

<Layout pageTitle='Pictures' pageDescription={heroContent.introText.first}>
  <PageTransition>
    <div class='flex flex-col gap-12'>
      <div class='flex-1 flex flex-col'>
        <SimpleHero {...heroContent} />
        {
          pictures.length > 0 ? (
            <section class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-[100vw]'>
              {pictures.map((picture) => (
                <PictureCard picture={picture} />
              ))}
            </section>
          ) : (
            <div class='text-center py-12'>
              <p class='mt-2 text-zinc-600 dark:text-zinc-400'>
                Check back soon for new photography collections.
              </p>
            </div>
          )
        }
      </div>
    </div>
  </PageTransition>
</Layout>
