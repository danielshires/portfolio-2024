---
import ProjectImage from '../FeaturedProject/ProjectImage.astro'
import Text from '../Text/Text'

interface Props {
  projectImage: {
    src: string
    alt: string
    width: number
    height: number
  }
  title: string
  heading: string
  description?: string
  projectUrl: string
}

const { projectImage, title, heading, projectUrl } = Astro.props
---

<div class='col-span-1 md:col-span-3 lg:col-span-4'>
  <ProjectImage
    src={projectImage.src}
    alt={projectImage.alt}
    title={heading}
    projectUrl={projectUrl}
    width={projectImage.width}
    height={projectImage.height}
  />
  <div class='pt-2'>
    <Text variant='overline' color='muted' className='mt-4'>{title}</Text>
    <Text variant='h4' className='mt-1'>{heading}</Text>
  </div>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
