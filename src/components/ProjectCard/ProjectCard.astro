---
import ProjectImage from '../FeaturedProject/ProjectImage.astro'
import type { ImageMetadata } from 'astro'

interface Props {
  projectImage: {
    src: ImageMetadata
    alt: string
    width: number
    height: number
  }
  title: string
  heading: string
  description: string
  projectUrl: string
}

const { projectImage, title, heading, description, projectUrl } = Astro.props
---

<div class='group block relative overflow-hidden transition-all duration-300'>
  <ProjectImage
    src={projectImage.src}
    alt={projectImage.alt}
    title={heading}
    projectUrl={projectUrl}
    width={projectImage.width}
    height={projectImage.height}
  />
  <div class='pt-4'>
    <h3 class='text-sm font-medium'>{title}</h3>
    <h2 class='text-xl md:text-2xl font-medium mt-2'>{heading}</h2>
  </div>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
