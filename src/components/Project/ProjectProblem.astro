---
import type { PortableTextBlock } from '@portabletext/types'
import { PortableText } from 'astro-portabletext'
import Text from '../Text/Text'

interface Props {
  problem: PortableTextBlock[]
}

const { problem } = Astro.props
const containerClass = 'col-span-1 md:col-span-6 pb-12'
const proseClass = 'prose prose-lg prose-zinc dark:prose-invert max-w-none'
---

<div class={containerClass}>
  <Text variant='h4' className='pb-6'>Problem</Text>
  <div class={proseClass}>
    <PortableText value={problem} />
  </div>
</div>