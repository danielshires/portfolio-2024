---
interface Props {
  fullScreen?: boolean
}

const { fullScreen = false } = Astro.props
---

<div
  class:list={[
    'flex items-center justify-center',
    fullScreen
      ? 'fixed inset-0 bg-white/80 dark:bg-zinc-900/80 backdrop-blur-sm z-50'
      : 'w-full h-32',
  ]}>
  <div class='relative'>
    <div class='w-12 h-12 border-4 border-gray-200 dark:border-zinc-700 rounded-full'></div>
    <div
      class='w-12 h-12 border-4 border-primary dark:border-primary-light rounded-full animate-spin absolute top-0 left-0 border-t-transparent'>
    </div>
  </div>
</div>

<style>
  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .animate-spin {
    animation: spin 1s linear infinite;
  }
</style>
