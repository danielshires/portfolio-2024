---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'

interface Props {
  src: string
  alt: string
  title: string
  projectUrl: string
  width: number
  height: number
  transitionName?: string
}

const { src, alt, title, projectUrl, width, height, transitionName } = Astro.props as Props
---

<a
  href={projectUrl}
  class='block relative overflow-hidden group'
  aria-label={`View ${title} project`}
  transition:name={transitionName}>
  <div class='w-full aspect-[3/2] overflow-hidden rounded-xl'>
    <img
      src={src}
      alt={alt}
      width={width}
      height={height}
      class='w-full h-full object-cover transition-transform duration-500 group-hover:scale-105'
      loading='eager'
      decoding='async'
    />
  </div>
</a>
