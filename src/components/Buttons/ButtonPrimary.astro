---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);

interface Props {
	path: string;
	target: string;
	href: string;
}

const {href, target } = Astro.props;

---

<a href={href} target={target} class="bg-zinc-950 hover:bg-zinc-800 hover:underline text-zinc-50 rounded-full w-fit py-3 px-4 text-sm md:text-lg transition"><slot/></a>


