---
interface Props {
  value: string
  label: string
  index: number
}

const { value, label, index } = Astro.props as Props
---

<div
  class='flex flex-col items-start md:items-start'
  transition:name={`commbank-outcome-${index}`}>
  <span
    class='text-xl md:text-2xl font-medium font-fragment'
    transition:name={`commbank-outcome-value-${index}`}>
    {value}
  </span>
  <span class='text-sm text-gray-600' transition:name={`commbank-outcome-label-${index}`}>
    {label}
  </span>
</div>
